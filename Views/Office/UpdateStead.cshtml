@model REAgency.Models.Stead.UpdateSteadViewModel

<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OperationId" class="control-label"></label>
                <select asp-for="OperationId" class="form-control" asp-items="ViewBag.Operations as SelectList"></select>
                <span asp-validation-for="OperationId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RegionId" class="control-label"></label>
                <select asp-for="RegionId" class="form-control" asp-items="ViewBag.Regions as SelectList"></select>
                <span asp-validation-for="RegionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistrictId" class="control-label"></label>
                <select asp-for="DistrictId" class="form-control" asp-items="ViewBag.Districts as SelectList"></select>
                <span asp-validation-for="DistrictId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalityId" class="control-label"></label>
                <select asp-for="LocalityId" class="form-control" asp-items="ViewBag.Localities as SelectList"></select>
                <span asp-validation-for="LocalityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numberStreet" class="control-label"></label>
                <input asp-for="numberStreet" type="number" class="form-control" />
                <span asp-validation-for="numberStreet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" type="number" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="currencyId" class="control-label"></label>
                <select asp-for="currencyId" class="form-control" asp-items="ViewBag.Currencies as SelectList"></select>
                <span asp-validation-for="currencyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" type="number" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cadastr" class="control-label"></label>
                <input asp-for="Cadastr" class="form-control" />
                <span asp-validation-for="Cadastr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Use" class="control-label"></label>
                <select asp-for="Use" class="form-control">
                    <option value="1">житлове</option>
                    <option value="2">промислове</option>
                    <option value="3">садове</option>
                    <option value="4">сільськогосподарське</option>
                </select>
                <span asp-validation-for="Use" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @if (Context.Session.GetString("IsAdmin") == "True")
            {
                <div class="form-group">
                    <label asp-for="employeeId" class="control-label"></label>
                    <select asp-for="employeeId" class="form-control" asp-items="ViewBag.Employees as SelectList"></select>
                    <span asp-validation-for="employeeId" class="text-danger"></span>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="employeeId" class="form-control" />
            }
            @foreach (var photo in Model.photos)
            {
                <img src="@photo" alt="Image" />
            }
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone1" class="control-label"></label>
                <input asp-for="Phone1" inputmode="tel" class="form-control" />
                <span asp-validation-for="Phone1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                <select asp-for="status" class="form-control">
                    <option value="True">Активне</option>
                    <option value="False">Не активне</option>
                </select>
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="box">
                    <input name="formFiles" type="file" multiple accept="image/*" onchange="previewImages(event)">
                    <div id="imagePreview"></div>
                </div>
            </div>

            <input type="hidden" asp-for="estateObjectId" class="form-control" />
            <input type="hidden" asp-for="clientId" class="form-control" />

            <input type="hidden" asp-for="countryId" class="form-control" />
            <input type="hidden" asp-for="countViews" class="form-control" />
            <input type="hidden" asp-for="locationId" class="form-control" />
            <input type="hidden" asp-for="Date" class="form-control" />
            <input type="hidden" asp-for="estateType" class="form-control" />
            <input type="hidden" asp-for="steadId" class="form-control" />
            <input type="hidden" asp-for="unitAreaId" class="form-control" />
            <input type="hidden" asp-for="Path" class="form-control" />

            <div class="form-group">
                <input type="submit" value="Редагувати об'єкт" class="btn btn-primary" asp-action="UpdateStead" asp-controller="Office" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Office">Відміна</a>
</div>