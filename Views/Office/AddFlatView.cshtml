@model REAgency.Models.Flat.AddFlatViewModel

<link rel="stylesheet" href="~/css/AddFormStyle.css">
<h4>Додаємо квартиру. Заповніть усі поля.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFlatView" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OperationId" class="control-label"></label>
                <select asp-for="OperationId" class="form-control" asp-items="ViewBag.Operations as SelectList"></select>
                <span asp-validation-for="OperationId" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="RegionId" class="control-label"></label>
                <select asp-for="RegionId" class="form-control" asp-items="ViewBag.Regions as SelectList"></select>
                <span asp-validation-for="RegionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistrictId" class="control-label"></label>
                <select asp-for="DistrictId" class="form-control" asp-items="ViewBag.Districts as SelectList"></select>
                <span asp-validation-for="DistrictId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalityId" class="control-label"></label>
                <select asp-for="LocalityId" class="form-control" asp-items="ViewBag.Localities as SelectList"></select>
                <span asp-validation-for="LocalityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numberStreet" class="control-label"></label>
                <input asp-for="numberStreet" type="number" class="form-control" />
                <span asp-validation-for="numberStreet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" type="number" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="currencyId" class="control-label"></label>
                <select asp-for="currencyId" class="form-control" asp-items="ViewBag.Currencies as SelectList"></select>
                <span asp-validation-for="currencyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rooms"  class="control-label"></label>
                <input asp-for="Rooms" type="number" class="form-control" />
                <span asp-validation-for="Rooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" type="number" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="livingArea" class="control-label"></label>
                <input asp-for="livingArea" type="number" class="form-control" />
                <span asp-validation-for="livingArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kitchenArea" class="control-label"></label>
                <input asp-for="kitchenArea" type="number" class="form-control" />
                <span asp-validation-for="kitchenArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Floor" class="control-label"></label>
                <input asp-for="Floor" type="number" class="form-control" />
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Floors" class="control-label"></label>
                <input asp-for="Floors" type="number" class="form-control" />
                <span asp-validation-for="Floors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone1" class="control-label"></label>
                <input asp-for="Phone1" inputmode="tel" class="form-control" />
                <span asp-validation-for="Phone1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="box">
                    <input name="formFiles" type="file" multiple accept="image/*" onchange="previewImages(event)">
                    <div id="imagePreview"></div>
                </div>            
            </div>
            <div class="form-group">
                <input type="submit" value="Додати об'єкт'" class="btn btn-primary" asp-action="CreateFlat" asp-controller="Office" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Office">Відміна</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

